# Server Configuration
PORT=3000
NODE_ENV=production

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CHANNEL_ID=@your_channel_username

# Security
API_KEY=your-super-secret-api-key-min-32-chars

# File Settings
MAX_FILE_SIZE=52428800
DOWNLOAD_TIMEOUT=60000

# Queue Settings
# Максимум одновременных загрузок (по умолчанию: 3)
MAX_CONCURRENT_DOWNLOADS=5

# Максимум видео в очереди (по умолчанию: 50)
MAX_QUEUE_SIZE=100

# Таймаут обработки одного видео (по умолчанию: 10 минут)
QUEUE_TIMEOUT=600000

# Memory Settings
# Максимум памяти на одно видео (по умолчанию: 50MB)
MAX_MEMORY_PER_VIDEO=52428800

# Максимум общей памяти (по умолчанию: 200MB)
MAX_TOTAL_MEMORY=209715200

# Rate Limiting Settings (INCREASED LIMITS)
# General rate limit: requests per 15 minutes (default: 500)
RATE_LIMIT_MAX=500

# API rate limit: requests per minute (default: 150)
API_RATE_LIMIT_MAX=150

# Download rate limit: downloads per minute (default: 20)
DOWNLOAD_RATE_LIMIT_MAX=20

# JWT Authentication (optional)
# JWT_SECRET=your-jwt-secret-or-will-use-api-key
# JWT_EXPIRY=24h

# Optional: Custom temp directory
# TEMP_DIR=./temp

# Optional: CORS origins (comma separated)
# CORS_ORIGINS=https://www.instagram.com,chrome-extension://*

# Optional: WebSocket settings
# WEBSOCKET_ENABLED=true
# WEBSOCKET_PATH=/ws

# Optional: Debug settings
# DEBUG_MEMORY=false