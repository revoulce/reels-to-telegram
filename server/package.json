{
  "name": "reels-to-telegram-server",
  "version": "4.0.0",
  "description": "Enterprise-grade modular server with WebSocket real-time updates and JWT authentication for Instagram Reels to Telegram Chrome extension",
  "main": "src/server.js",
  "scripts": {
    "start": "node --env-file=.env src/server.js",
    "dev": "DEBUG_MEMORY=true nodemon --env-file=.env src/server.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "setup": "node setup.js",
    "clean": "node scripts/clean.js",
    "queue-status": "node scripts/queue-status.js",
    "memory-status": "node scripts/memory-status.js",
    "health-check": "node scripts/health-check.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "instagram",
    "telegram",
    "reels",
    "bot",
    "chrome-extension",
    "video-downloader",
    "queue",
    "memory-processing",
    "modular-architecture"
  ],
  "author": "revoulce",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/revoulce/reels-to-telegram.git"
  },
  "homepage": "https://github.com/revoulce/reels-to-telegram",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "telegraf": "^4.16.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "off"
    }
  }
}
